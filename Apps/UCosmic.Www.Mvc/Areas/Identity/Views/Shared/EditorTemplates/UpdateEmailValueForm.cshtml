@model UCosmic.Www.Mvc.Areas.Identity.Models.UpdateEmailValueForm
<div class="email-respell-editor">
    <div class="hidden-input">
        @Html.EditorFor(m => m.ReturnUrl)
        @Html.EditorFor(m => m.PersonUserName)
        @Html.EditorFor(m => m.Number)
    </div>
    <div class="field" data-ucosmic-val="css">
        <span class="label">
            @Html.LabelFor(m => m.OldSpelling)
        </span>
        <div class="messages" data-ucosmic-focused-class="focused">
            <div class="bottom callout border">
                <div class="bottom callout bg">
                </div>
            </div>
        </div>
        <div class="input">
            <div class="text-box input">
                @Html.TextBoxFor(m => m.OldSpelling, new { @readonly = "readonly", })
            </div>
        </div>
    </div>
    <div class="field" data-ucosmic-val="css">
        <span class="label" data-ucosmic-val-hide="error" data-ucosmic-val-show="valid" data-ucosmic-focused-class="focused">
            @Html.LabelFor(m => m.Value)
        </span>
        <div class="messages" data-ucosmic-focused-class="focused">
            <span class="validation">
                @Html.ValidationMessageFor(m => m.Value)
                @Html.ValidationMessageFor(m => m)
            </span>
            <div class="bottom callout border">
                <div class="bottom callout bg">
                </div>
            </div>
        </div>
        <div class="input">
            <div class="text-box input" data-ucosmic-watermark="true" 
                 data-ucosmic-watermark-text="@(ModelMetadata.FromLambdaExpression(m => Model.Value, ViewData).Watermark)"
                 data-ucosmic-watermark-class="watermark" data-ucosmic-watermark-focused-class="focused"
                 data-ucosmic-trim-input="true">
                @Html.EditorFor(m => m.Value)
            </div>
        </div>
    </div>
    <div>
        <input type="submit" value="Save Changes" id="email_respell_submit_button" />
        @Html.Partial(MVC.Shared.Views.return_url_cancel_link, Model.ReturnUrl)
        @Html.Partial(MVC.Shared.Views.form_submitted_spinner)
    </div>
</div>
