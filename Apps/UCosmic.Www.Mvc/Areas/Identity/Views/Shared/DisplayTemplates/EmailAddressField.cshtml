@using UCosmic.Www.Mvc.Areas.Identity.Controllers
@model string
<div class="field" data-ucosmic-val="css">
    <span class="label" data-ucosmic-val-hide="error" data-ucosmic-val-show="valid" data-ucosmic-focused-class="focused">
        <label style="display:inline-block;">@ModelMetadata.FromLambdaExpression(m => m, ViewData).DisplayName</label>
        <a href="@Url.Action(MVC.Identity.SignDown.Get(Request.QueryString[ValidateSigningReturnUrlAttribute.ReturnUrlParamName]))">This is not my email address</a>
    </span>
    <div class="messages" data-ucosmic-focused-class="focused">
        <span class="validation">@Html.ValidationMessageFor(m => m)</span>
        <div class="bottom callout border">
            <div class="bottom callout bg">
            </div>
        </div>
    </div>
    <div class="input">
        <div class="text-box input" data-ucosmic-watermark="true"
             data-ucosmic-watermark-text="@(ModelMetadata.FromLambdaExpression(m => m, ViewData).Watermark)"
             data-ucosmic-watermark-class="watermark" data-ucosmic-watermark-focused-class="focused"
             data-ucosmic-trim-input="true">
            @Html.HiddenFor(m => m)
            <input type="email" readonly="readonly" value="@Model" />
        </div>
    </div>
</div>
